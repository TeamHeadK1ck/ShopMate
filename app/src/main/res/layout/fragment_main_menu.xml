<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_brown"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.mainMenu.MainMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_container_margin"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/registrationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:fontFamily="@font/kyivtypeserif_vargx"
            android:text="@string/registration"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/registrationUnderlining"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-10dp"
            android:background="@color/dark_brown"
            app:layout_constraintEnd_toEndOf="@+id/registrationText"
            app:layout_constraintStart_toStartOf="@+id/registrationText"
            app:layout_constraintTop_toBottomOf="@+id/registrationText" />

        <TextView
            android:id="@+id/authorizationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/kyivtypeserif_vargx"
            android:text="@string/authorization"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrationUnderlining" />

        <View
            android:id="@+id/authorizationUnderlining"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/dark_brown"
            app:layout_constraintEnd_toEndOf="@+id/registrationUnderlining"
            app:layout_constraintStart_toStartOf="@+id/registrationUnderlining"
            app:layout_constraintTop_toBottomOf="@+id/authorizationText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>